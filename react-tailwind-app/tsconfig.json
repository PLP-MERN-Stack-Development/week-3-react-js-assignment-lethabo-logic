{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowJs": true,                // ✅ Allow .js/.jsx
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],               // ✅ Only include your source folder
  "exclude": ["node_modules"]
}
